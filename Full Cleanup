name: Full Cleanup

on:
  workflow_dispatch:

jobs:
  cleanup:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Remove all files except README.md and docs/
        run: |
          find . -mindepth 1 -maxdepth 1 ! -name '.git' ! -name 'README.md' ! -name 'docs' -exec rm -rf {} +

      - name: Commit and push changes
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add -A
          git commit -m "chore: full cleanup â€” keep only README.md and docs"
          git push origin HEAD:main
